<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th>City</th>
      <th>Street</th>
      <th>Coordinate</th>
      <th>Zip code</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Description</th>
      <th>Extra</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.parent_id %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.street %></td>
        <td><%= restaurant.coordinate %></td>
        <td><%= restaurant.zip_code %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.extra %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

